// Navigation
.navigation{
  padding: 10px 0;
  width: 100%;
  height: 80px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;

  .navigation-wrapper{
    display: flex;
    flex-direction: row;
    align-items: center;

    .logo{
      padding: 0 5px 0 0;
    }
  }

  .navigation-list{
    margin-left: 30px;
    display: flex;

    @media screen and ($lg-down) {
      margin-left: 15px;
    }
    @media screen and ($md-down) {
      display: none;
    }
  }

  .navigation-actions{
    display: flex;
    align-items: center;

    .navigation-action-item{
      margin: 0 10px;

      a{
        text-decoration: none;
        position: relative;
        font-size: 16px;

        &.mobile-search-toggle{
          display: none;

          @media screen and ($md-down) {
            display: block;
          }
        }

        span{
          &.cart-counter{
            position: absolute;
            right: -12px;
            top: -6px;
            width: 16px;
            background: $red;
            height: 16px;
            font-weight: 600;
            border-radius: 10px;
            font-size: 10px;
            display: flex;
            line-height: 1;
            align-items: center;
            justify-content: center;
            coolor: #ffffff;
          }
        }
      }

      &:first-child{
        margin: 0 10px 0 0;
        display: flex;
      }
      &:last-child{
        margin: 0 0 0 10px;
      }
    }
  }

  .nav-search-container{
    position: relative;
    transition: all 300ms ease;

    &.active{
      display: block;
    }

    @media screen and ($md-down) {
      display: none;
      position: fixed;
      left: 0;
      right: 0;
      top: 80px;
      width: 100%;
      background: #000000;
      padding: 10px 20px;
      z-index: 2;
    }
    @media screen and ($xs-down) {
      padding: 10px 15px;
    }

    .search-input-wrapper{

      @media screen and ($md-down) {
        max-width: 720px;
        width: 100%;
        margin: 0 auto;
        padding: 0 15px;
      }

      @media screen and ($sm-down) {
        max-width: 540px;
        width: 100%;
        margin: 0 auto;
        padding: 0 15px;
      }

      @media screen and ($xs-down) {
        max-width: 100%;
        width: 100%;
        margin: 0 auto;
        padding: 0 15px;
      }

      input{
        width: 220px;
        height: 30px;
        padding: 0 0 0 10px;
        border-radius: 5px 0 0 5px;
        border: 1px solid $white;
        background: $white;
        outline: none;

        @media screen and (max-width: 1400px) {
          width: 150px;
        }

        @media screen and ($lg-down) {
          width: 115px;
        }


        @media screen and ($md-down) {
          width: calc(100% - 30px);
        }
      }

      button{
        height: 30px;
        width: 30px;
        margin-left: -5px;
        border-radius: 0 5px 5px 0;
        border: 1px solid $red;
        cursor: pointer;
        color: $white;
        background: $red;
      }
    }

    .product-search-container{
      display: none;
      width: 250px;
      height: 200px;
      background: $white;
      position: absolute;
      overflow: auto;
      z-index: 2;
      top: 30px;
      padding: 10px;
      border-radius: 5px;

      @media screen and ($lg-down) {
        width: 200px;
      }

      @media screen and ($md-down) {
        max-width: 690px;
        width: 100%;
        top: 40px;
        left: calc(50% - 345px);
      }

      @media screen and ($sm-down) {
        max-width: 510px;
        left: calc(50% - 255px);
      }

      @media screen and ($xs-down) {
        max-width: 100%;
        left: 0;
      }

      .product-item{
        display: flex;
        margin-bottom: 20px;

        .product-item-img{
          width: 40px;
          height: 40px;
          margin-right: 5px;

          a{
            width: 40px;
            height: 40px;
          }

          img{
            width: 100%;
            height: auto;
          }
        }

        .product-title{
          font-size: 13px;
          color: $black;
          font-weight: 600;
          margin-bottom: 5px;
          line-height: 1;
        }

        .product-price{
          font-size: 13px;
          color: $black;
          line-height: 1;
        }

      }
    }

    .no-results-products-container{
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;

      p{
        font-size: 14px;
      }
    }
  }

  .navigation-toggle{
    margin: 4px 0 0 25px;
    display: none;

    @media screen and ($md-down) {
      display: flex;
    }

    .side-menu-toggle{
      color: white;
      font-size: 20px;
      cursor: pointer;
    }
  }

  .nav-list{
    list-style: none;
    display: flex;

    .nav-item{
      margin: 0 1px;
      padding: 5px !important;
      line-height: 1em;

      &:last-child{
        background-color: $red;
        padding: 5px !important;
        border-radius: 4px;
        line-height: 1em;
      }
      &:first-child{
        border: 1px solid #fff;
        padding: 5px !important;
        border-radius: 4px;
      }

      @media screen and ($lg-up) {
        margin: 0 5px;
      }
    }

    .nav-link{
      font-size: 13px;
      color: $white;
      letter-spacing: 1px;
      text-transform: uppercase;

      @media screen and (max-width: 1400px) {
        font-size: 10px;
      }
      @media screen and (max-width: 1200px) {
        font-size: 9px;
      }
    }
  }

  &.navigation-dark{
    background: $black;
  }

  ul#SiteNav {
    display: flex;
    list-style: none;

    li{
      padding: 0 15px;
    }
  }

}

.side-navigation{
  max-width: 600px;
  background: #fff;
  width: 100%;
  height: 100%;
  position: fixed;
  transform: translateX(-600px);
  transition: .4s ease-in-out;
  left: -600px;
  top: 0;
  bottom: 0;
  z-index: 999;
  padding: 15px;


