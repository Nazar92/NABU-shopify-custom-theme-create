// Buttons
.btn {
  display: inline-block;
  text-align: center;
  text-transform: uppercase;
  white-space: nowrap;
  vertical-align: middle;
  user-select: none;
  border: 1px solid transparent;
  padding: 10px 30px;
  font-size: 16px;
  line-height: 1;
  transition: color .15s ease-in-out,
  background-color .15s ease-in-out,
  border-color .15s ease-in-out,
  box-shadow .15s ease-in-out;
  cursor: pointer;
  outline: none;

  &.btn-default{
    color: $white;
    background: $black;
  }

  &.btn-white{
    color: $black;
    background: $white;
  }

  &.btn-red{
    color: $white;
    background: $red;
  }
  &.btn-green{
    color: $white;
    background: $green;
  }
  &.btn-shop-primary{
    margin-bottom: 10px;
    background-size: contain;
    width: 150px;
    background-position: center;
    background-repeat: no-repeat;
  }
  &.btn-shop-secondary{
    margin-bottom: 10px;
    background-size: contain;
    width: 200px;
    height: 53px;
    background-position: center;
    background-repeat: no-repeat;
  }

  &.has-shadow{
    box-shadow: 0 20px 44px -12px rgba(0,0,0, 0.35);
  }

  &.btn-view-product{
    padding: 10px 15px;
    font-size: 12px;
    line-height: 1;
  }

  &.btn-checkout{
    width: 100%;
    color: $white;
    margin: 10px 0;
    padding: 17px 30px;
    background-color: $blue;
  }

  &.btn-update-cart{
    background: $black;
    color: $white;
    font-size: 14px;
    border: 1px solid;
    padding: 5px 10px;
  }
  &.btn-continue-shopping{
    background: $white;
    border: 1px solid #cccccc;
    color: #777777;
    font-size: 14px;
    padding: 5px 10px;

    &:hover{
      background: $red;
      color: $white;
      border: 1px solid $red;
    }
  }

  &.btn-submit-form{
    max-width: 300px;
  }

  &.red-button{
    border: 1px solid $red;
    background-color: $red;
    color: $white;
  }
  &.btn-red-border{
    border: 1px solid $red;
    color: $red;
  }


}

